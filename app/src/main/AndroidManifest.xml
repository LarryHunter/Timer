<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.hunterdev.timerapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_timer_black"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_timer_black"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TimerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".TimerActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver
            android:name=".TimerExpiredReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>
        <receiver
            android:name=".TimerNotificationActionReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="start"/>
                <action android:name="resume"/>
                <action android:name="pause"/>
                <action android:name="stop"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>